pipeline {
  agent any
  environment {    
    VERSION = "1.0"
  
  
  }
  
  stages {
    stage('Check Out'){    
      steps{
        
        echo "Check out condition satisfied"     
      
      }
    } 
        
    stage('Build'){
      steps{
        echo "Building version $VERSION "
      }    
    }     
    
    stage('Test'){
      steps {
         echo "Unit testing of code is done here"
      }
    
    
    } 
    
  
  
  
  
  
  
  
  }








}
